<div class="dark-mode-toggle">
  <label>
    <input class="dark-mode-toggle-input" type="checkbox" />
    <span class="slider" />
  </label>
</div>

<script>
import { ChangeEvent } from "react"

  const updateBody = (darkMode: boolean) => {
    const body = document.body
    if(darkMode) {
      body.classList.add('dark-mode')
    }
    else {
      body.classList.remove('dark-mode')
    }
  }

  const toggle: HTMLInputElement | null = document.querySelector('.dark-mode-toggle-input')

  // handle toggle change
  toggle?.addEventListener('change', (event) => {
    // update localstorage
    // @ts-expect-error untyped event target
    const isDarkMode = !event?.target?.checked ?? true
    localStorage.setItem('darkMode', `${isDarkMode}`)

    // update body class
    updateBody(isDarkMode)
  })

  // initially check checkbox
  const userPrefersDarkMode = window.matchMedia("(prefers-color-scheme:dark)").matches;
  const isDarkMode = localStorage.getItem('darkMode') === "true" || userPrefersDarkMode
  if(toggle) {
    toggle.checked = !isDarkMode
  }

  // initiall update body
  updateBody(isDarkMode)
</script>

