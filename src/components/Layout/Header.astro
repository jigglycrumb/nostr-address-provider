---
export interface Props {
	host: string;
	slogan?: string;
}

const { host, slogan } = Astro.props
---

<header>
  <div>
    <h1 class="text-gradient">{host}</h1>

    {slogan && (
			<h3 class="text-gradient">
				{slogan}
			</h3>
		)}
  </div>

  <img src="favicon.png" alt="website icon" />
</header>

<style>
	:root {
		--logo-size: 84px;
	}

  header {
    align-items: center;
    display: grid;
    grid-template-columns: 1fr var(--logo-size);
		margin-bottom: 2rem;
  }

	h1 {
		font-size: 4rem;
		font-weight: 800;
		margin: 0;
    background-size: 150% !important;
	}

	h3 {
		margin-bottom: 0;
    margin-top: 0.5rem;
    background-size: 150% !important;
	}

  img {
    max-width: var(--logo-size);
  }

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
